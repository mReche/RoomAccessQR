<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manoloreche.myapplication.UserView">

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_weight="1"
        app:srcCompat="@color/colorPrimary"
        tools:ignore="ContentDescription,InefficientWeight"
        android:contentDescription=""
        android:layout_marginStart="33dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nameNsurenameText"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/nameNsurenameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_surename"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_alignTop="@+id/profilePic"
        android:layout_alignEnd="@+id/phoneNumberText" />

    <TextView
        android:id="@+id/ameNsurename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameNsurenameText"
        android:layout_marginStart="34dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/phoneNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ameNsurename"
        android:layout_marginTop="18dp"
        android:text="@string/phone_number"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ameNsurename"
        android:layout_below="@+id/phoneNumberText"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/mailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_email"
        android:textColor="?colorPrimary"
        android:textStyle="bold"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/phoneNumber"
        android:layout_alignStart="@+id/nameNsurenameText" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/phoneNumber"
        android:layout_below="@+id/mailText"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="30dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_camera"
        app:backgroundTint = "@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/historicalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/hist_access"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/mail"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
